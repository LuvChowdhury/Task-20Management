# Task Management Application - Environment Variables Example
# Copy this file to .env.local and fill in your values

# ============================================
# API Configuration
# ============================================

# API Base URL (for backend integration)
# Development: http://localhost:3000
# Production: https://api.yourdomain.com
VITE_API_URL=http://localhost:3000/api

# ============================================
# Feature Flags
# ============================================

# Enable/disable features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LOGGING=true
VITE_ENABLE_DEBUG_MODE=false

# ============================================
# Error Tracking (Sentry)
# ============================================

# Sentry DSN for error reporting
# Get from: https://sentry.io
VITE_SENTRY_DSN=

# Environment name
VITE_SENTRY_ENVIRONMENT=development

# Sample rate for performance monitoring (0.0 - 1.0)
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# Analytics
# ============================================

# Google Analytics ID
VITE_GA_ID=

# Enable analytics tracking
VITE_ENABLE_GA=false

# ============================================
# Authentication (Future)
# ============================================

# OAuth/Auth0 configuration
VITE_AUTH_DOMAIN=
VITE_AUTH_CLIENT_ID=
VITE_AUTH_AUDIENCE=

# ============================================
# Build Configuration
# ============================================

# Node version (for build systems)
NODE_VERSION=18

# Enable source maps in production
VITE_SOURCE_MAP=false

# ============================================
# Notes
# ============================================

# DO NOT commit .env files with actual values!
# - .env.local (local development) - NEVER commit
# - .env.development (dev environment) - Can commit if non-sensitive
# - .env.production (production) - NEVER commit
#
# For platform-specific deployment:
# - Netlify: Use Dashboard → Build & Deploy → Environment
# - Vercel: Use Dashboard → Settings → Environment Variables
# - AWS Amplify: Use App Settings → Environment variables
#
# Variable naming:
# - VITE_* prefix: Exposed to frontend (safe non-sensitive data)
# - Other variables: Backend only (hidden from browser)
